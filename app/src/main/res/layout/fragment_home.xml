<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".home.HomeFragment"
    android:background="@drawable/ic_scan_qr_code"
    android:backgroundTint="?attr/colorSurfaceVariant"
    android:layout_margin="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_borrow_homeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="homeLayoutClickEvent"
                android:text="Emprunt"
                android:textSize="25sp"
                android:drawableLeft="@drawable/ic_up_out"
                android:minEms="8"
                android:layout_marginBottom="20dp"
                />

            <Button
                android:id="@+id/btn_giveBack_homeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="homeLayoutClickEvent"
                android:text="Remise"
                android:textSize="25sp"
                android:drawableLeft="@drawable/ic_down_in"
                android:minEms="8"
                android:layout_marginBottom="70dp"
               />

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout_homeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ©connexion"
        android:backgroundTint="?attr/colorSecondary"/>


</LinearLayout>