<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".home.HomeFragment"
    android:background="@drawable/ic_scan_qr_code"
    android:backgroundTint="#2C676068"
    android:layout_margin="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="35dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_up_out" />

            <Button
                android:id="@+id/btn_borrow_homeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="homeLayoutClickEvent"
                android:text="Emprunt"
                android:drawableLeft="@drawable/ic_scan_qr_code"
                android:ems="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_down_in" />

            <Button
                android:id="@+id/btn_giveBack_homeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="homeLayoutClickEvent"
                android:text="Remise"
                android:drawableLeft="@drawable/ic_scan_qr_code"
                android:ems="10"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout_homeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ©connexion"
        android:backgroundTint="#E91E63"/>


</LinearLayout>